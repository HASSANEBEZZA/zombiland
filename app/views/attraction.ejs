<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Liste des Attractions</title>
    <link rel="stylesheet" href="/css/attraction.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>

    <main>
        <div class="titre-attraction">
            <h1 id="main-title">Liste des Attractions</h1>
        </div>
        <div class="attractions-list" id="attractions-list">
            <% if (attractions.length === 0) { %>
                <p id="no-attractions">Aucune attraction disponible pour le moment.</p>
            <% } else { %>
                <% attractions.forEach(function(attraction) { %>
                    <div class="attraction">
                        <a href="/attractionDetail/<%= attraction.id %>">
                            <div class="image-container">
                                <img src="<%= attraction.photo_url %>" alt="<%= attraction.name %>">
                            </div>
                            <h2><%= attraction.name %></h2>
                            <p><strong>Catégorie:</strong> <%= attraction.category %></p>
                        </a>
                    </div>
                <% }); %>
            <% } %>
        </div>

        <button id="back-to-top" style="display: none;">⬆️ Retour en haut</button>
    </main>

    <%- include('partials/footer') %>

    <script src="/js/attraction.js"></script>
    <script src="/js/header.js"></script>
</body>
</html>
